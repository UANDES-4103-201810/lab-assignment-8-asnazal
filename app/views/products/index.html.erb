<p id="notice"><%= notice %></p>

<div class="container">
  <h2>Products</h2>

  <table class="table table-dark table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Price</th>
      <th>User id</th>

      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |x| %>

      <tr>
        <td> <%=x.name%></td>
        <td> <%=x.weight%></td>
        <td> <%=x.price%></td>
        <td> <%=x.user_id%></td>



        <td> <%= link_to 'Show Products','/users/' + x.id.to_s %></td>
        <td> <%= link_to 'Edit', edit_user_path(x) %></td>
        <td><%= link_to 'Destroy', x, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end%>
    </tbody>
  </table>
</div>

<%= link_to 'New Product', new_product_path %>
